<mui:ModernWindow x:Class="QuanLyGiaiVoDich.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="Quản Lý Giải Vô Địch Bóng Đá Quốc Gia V1.0" IsTitleVisible="True"
        
        ContentSource="Pages/Layout/ThongTinGiaiDau.xaml" 
        WindowStartupLocation="CenterScreen" Width="1200" Height="700">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Thông Tin Giải Đấu">
            <mui:LinkGroup.Links>
                <mui:Link Source="Pages/Layout/ThongTinGiaiDau.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>

        <mui:LinkGroup DisplayName="Quản Lý Đội Bóng">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="home" Source="/Pages/Layout/QuanLyDoiBong.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>

        <mui:LinkGroup DisplayName="Lịch Thi Đấu">
            <mui:LinkGroup.Links>
                <mui:Link Source="/Pages/Layout/LichThiDau.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>

        <mui:LinkGroup DisplayName="Kết Quả Thi Đấu">
            <mui:LinkGroup.Links>
                <mui:Link Source="/Pages/Layout/KetQuaThiDau.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>

        <mui:LinkGroup DisplayName="Thống Kế - Báo Cáo">
            <mui:LinkGroup.Links>
                <mui:Link Source="Pages/Layout/ThongKeBaoCao.xaml" />            
            </mui:LinkGroup.Links>
        </mui:LinkGroup>

        <mui:LinkGroup DisplayName="settings" GroupKey="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="software" Source="/Pages/SettingsPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        
    </mui:ModernWindow.MenuLinkGroups>
    
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="Mùa giải" Source="/View/MuaGiai.xaml"/>
        <mui:Link DisplayName="Cài đặt" Source="/Pages/SettingsPage.xaml"/>
        <mui:Link DisplayName="Trợ giúp" Source="http://mui.codeplex.com"/>
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
